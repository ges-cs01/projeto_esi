<h2>Adicionar Categoria</h2>

<% if @category.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@category.errors.count, "erro") %> impedem que a categoria seja gravado no banco de dados:
    </h2>

    <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with scope: :category, url: categories_path, local: true do |form| %>

  <div class="col-md-6 form-group mb-3">
    <%= form.label 'Nome:', 'for' => 'nome', 'class' => 'form-label' %>
    <%= form.text_field :name, 'id' => 'nome', 'class' => 'form-control', 'placeholder' => 'Informe o nome da categoria' %>
  </div>

  <%= form.submit 'Salvar', 'class' => 'btn btn-primary px-4' %>
<% end %>