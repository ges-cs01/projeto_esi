<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <h2 class="text-center mb-3">Fazer Login</h2>

    <% if @session.errors.has_key? :base %>
      <div id="error_explanation">
        <%= @session.errors[:base].join(', ') %>
      </div>
    <% end %>

    <%= form_for @session do |f| %>
      <div class="form-group mb-3">
        <%= f.label 'E-mail', 'for' => 'email', 'class' => 'form-label' %>
        <%= f.text_field :email, 'id' => 'email', 'class' => 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label 'Senha', 'for' => 'password', 'class' => 'form-label' %>
        <%= f.password_field :password, 'id' => 'password', 'class' => 'form-control' %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit 'Entrar', 'class' => 'btn btn-primary px-4' %>
      </div>
    <% end %>
  </div>
</div>